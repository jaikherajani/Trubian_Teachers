<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cv_bg"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/post_image"
                android:scaleType="centerCrop"
                android:layout_margin="5dp"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/post_title"
                android:text="The Post Title goes here"
                android:layout_margin="5dp"
                android:background="@color/cardview_light_background"
                android:textIsSelectable="true"
                android:textSize="24sp"
                android:textColor="#000"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_branch"
                    android:text="for"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:background="@color/cardview_light_background"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_by"
                    android:text="by"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:background="@color/cardview_light_background"
                    android:textColor="#000" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/post_on"
                    android:text="on"
                    android:textSize="15sp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:background="@color/cardview_light_background"
                    android:textColor="#000" />

                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/post_desc"
                android:text="The Post Description goes here...."
                android:background="@color/cardview_light_background"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textColor="#000" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/button_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Read More"
                android:clickable="true"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="bottom|end"
                style="?android:attr/borderlessButtonStyle" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>